{
    "manifest_version": 3,
    "name": "Mercado Libre ðŸ‡¦ðŸ‡· | Cupones",
    "version": "1.0.1",
    "description": "Aplicador de cupones de Mercado Libre Argentina",
    "permissions": [
        "activeTab",
        "notifications"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon16.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        }
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mercadolibre.com.ar/cupones/filter?all=true&page=*&autoclick=true"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}